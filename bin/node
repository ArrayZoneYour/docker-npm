#!/usr/bin/env sh

TAG=latest
BRANCH=master
SCRIPT=node

if [ "self-update" = "$1" ]; then
    docker pull mkenney/npm:$TAG
    wget -nv --no-check-certificate -O /tmp/$SCRIPT https://raw.githubusercontent.com/mkenney/docker-npm/$BRANCH/bin/$SCRIPT \
        && cat /tmp/$SCRIPT > $0 \
        && rm -f /tmp/$SCRIPT \
        && exit 0
    exit 1
else
    if [ -t 0 ]; then
        term_type=ti
    else
        term_type=i
    fi
    docker run --rm -$term_type -v $(pwd):/src:rw -v $HOME/.ssh:/home/dev/.ssh:ro mkenney/npm:$TAG /run-as-user /usr/local/bin/$SCRIPT $@
fi
